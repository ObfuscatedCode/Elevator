{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Elevator",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-pthread",
        "-Wall",
        "-o",
        "-v",
        "src/Elevator.cpp",
        "src/Floors.cpp",
        "src/Log.cpp",
        "src/LogBase.cpp",
        "src/LogToScreen.cpp",
        "src/Main.cpp",
        "src/Management.cpp",
        "src/People.cpp",
        "src/PeopleCallsGenerator.cpp",
        "-oElevator"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
          "relative",
          "${workspaceRoot}"
        ],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ]
}